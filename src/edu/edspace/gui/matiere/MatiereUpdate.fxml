      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="161.0" prefWidth="264.0" spacing="10.0">
         <children>
            <HBox alignment="CENTER" style="-fx-background-color: #e1c1c1;" />
            <HBox alignment="CENTER">
               <children>
                  <Label prefWidth="70.0" text="Nom de la matière" />
                  <TextField fx:id="nom_tf" promptText="Nom" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label prefWidth="70.0" text="Niveau concerné" />
                  <ComboBox fx:id="niveau_cb" prefWidth="150.0" promptText="Niveau d'étude" />
               </children>
            </HBox>
            <Button fx:id="save_btn" mnemonicParsing="false" onAction="#handleClicks" onMouseClicked="#saveUpdate" text="Enregistrer">
               <VBox.margin>
                  <Insets left="150.0" top="15.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </content>
