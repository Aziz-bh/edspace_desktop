<DialogPane fx:id="dialog" prefHeight="130.0" prefWidth="264.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.edspace.gui.matiere.MatiereUpdateController">
